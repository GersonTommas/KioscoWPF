<Window x:Class="KioscoWPF.VentanaImagen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KioscoWPF"
        mc:Ignorable="d"
        Title="VentanaImagen" SizeToContent="WidthAndHeight" MaxHeight="550" MaxWidth="550" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="AUTO" />
        </Grid.RowDefinitions>
        
        <Image Source="{Binding imgSource}" Margin="5" />

        <Button Content="Cerrar" Command="{Binding comCerrar}" HorizontalAlignment="Right" Margin="5" Grid.Row="1"/>
    </Grid>
</Window>
